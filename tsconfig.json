{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "moduleResolution":"node",
    "resolveJsonModule": true,
    "types": ["jest", "mocha", "node", "jasmine"],
  },
    "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./global.d.ts"
  ]
}